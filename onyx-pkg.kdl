package {
    name "http-server" 
    author "Brendan Hansen" 
    url "git://onyxlang.io/repo/http-server" 
    description "A HTTP/1.1 server implemented in Onyx" 
    version "0.3.9" 
}

config {
    dependency_source_path "./lib" 
    dependency_binary_path "./bin" 
}

lsp {
    mode "project" 
    source_files "./examples/simple_server.onyx" 
    include_dirs "" 
    working_dir "." 
}

build {
    default {
        target "./static/server.wasm" 
        source "./server.onyx" 
    }
}

